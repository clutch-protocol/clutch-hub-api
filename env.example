# Clutch Hub API Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Logging
RUST_LOG=info
LOG_LEVEL=info

# Database (if applicable)
DATABASE_URL=postgresql://username:password@localhost/clutch_hub_api

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=3600

# External Services
CLUTCH_NODE_WS_URL=ws://localhost:8081/ws
SEQ_URL=http://localhost:5341
SEQ_API_KEY=your-seq-api-key

# Metrics
SERVE_METRIC_ADDR=0.0.0.0:9090

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
ENVIRONMENT=development

